{
  "info": {
    "_postman_id": "erp-fee-backend-collection-2025",
    "name": "ERP Fee Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Update Fee Details",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"studentId\": \"<student_id>\",\n  \"totalFee\": 10000,\n  \"dueAmount\": 2000,\n  \"dueDate\": \"2025-07-01\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/update-fee",
          "host": ["{{base_url}}"],
          "path": ["api", "update-fee"]
        }
      },
      "response": []
    },
    {
      "name": "Confirm Fee Submission (Yes)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/confirm?student_id=<student_id>&response=yes",
          "host": ["{{base_url}}"],
          "path": ["api", "confirm"],
          "query": [
            { "key": "student_id", "value": "<student_id>" },
            { "key": "response", "value": "yes" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Confirm Fee Submission (No)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/confirm?student_id=<student_id>&response=no",
          "host": ["{{base_url}}"],
          "path": ["api", "confirm"],
          "query": [
            { "key": "student_id", "value": "<student_id>" },
            { "key": "response", "value": "no" }
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" }
  ]
}
